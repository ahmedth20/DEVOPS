pipeline {
    agent any

    environment {
        DB_NAME = 'kaddem_db'
        DB_USER = 'root'
        DB_PASS = ''  
        DB_PORT = '3308'
        MYSQL_CONTAINER = 'mysql-test'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    git branch: 'universite', url: 'https://github.com/ahmedth20/DEVOPS.git'
                }
            }
        }
    
        stage('Start MySQL') {
         steps {
             script {
                 sh '''
                 docker run --name $MYSQL_CONTAINER \
                     -e MYSQL_DATABASE=$DB_NAME \
                     -e MYSQL_ROOT_PASSWORD=$DB_PASS \
                     -p 3308:3306 \
                     -d mysql:8
    
                 echo "Attente de MySQL (10 sec)..."
                 sleep 10
    
                 docker ps | grep $MYSQL_CONTAINER || (echo "MySQL n'a pas démarré !" && exit 1)
                 '''
             }
         }
     }



        stage('Build & Test') {
            steps {
                script {
                    sh 'mvn clean package'
                    sh 'mvn test'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                     sh 'mvn deploy -DskipTests=true' 
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Cleanup') {
            steps {
                script {
                    sh 'docker stop $MYSQL_CONTAINER || true'
                }
            }
        }
    }
}
